<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Site Name -->
        <EditText
            android:id="@+id/editTextDonationSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donation Site Name" />

        <!-- Address Selection -->
        <Button
            android:id="@+id/buttonSearchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Address" />

        <TextView
            android:id="@+id/textViewSelectedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No address selected"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <!-- Donation Hours -->
        <EditText
            android:id="@+id/editTextDonationHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Operating Hours (e.g., 9 AM - 5 PM)" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minLines="3"
            android:inputType="textMultiLine" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmitDonationSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Donation Site"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>