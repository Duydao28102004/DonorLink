<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/secondary"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <!-- Site Name -->
        <EditText
            android:id="@+id/editTextDonationSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Donation Site Name" />

        <!-- Address Selection -->
        <Button
            android:id="@+id/buttonSearchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Address" />

        <TextView
            android:id="@+id/textViewSelectedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No address selected"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Opening Time Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opening Time:"
                android:paddingEnd="8dp"/>

            <Button
                android:id="@+id/buttonOpeningTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Closing Time Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closing Time:"
                android:paddingEnd="8dp"/>

            <Button
                android:id="@+id/buttonClosingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time" />

        </LinearLayout>

        <!-- Required Blood Types -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Required Blood Types"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:id="@+id/linearLayoutBloodTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
        </LinearLayout>

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:minLines="3"
            android:inputType="textMultiLine" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmitDonationSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Donation Site"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>